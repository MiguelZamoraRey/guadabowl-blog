---
const { title, pubDate, description, image, url } = Astro.props;
---

<a href={url}>
  <section class="card">
    <div class="card__header">
      <img src={image.url} alt={image.alt} class="card__image" />
    </div>
    <div class="card__body">
      <h2>{title}</h2>
      <p>{description}</p>
    </div>
    <div class="card__footer">
      <div class="user">
        <div class="user__info">
          <small>{pubDate.slice(0, 10)}</small>
        </div>
      </div>
    </div>
  </section>
</a>

<style>
  a {
    text-decoration: none;
    width: 100%;
    margin-bottom: 0.5em;
    transition: 0.5s;
  }

  a:hover {
    scale: 1.05;
  }

  img {
    width: 100%;
    max-width: 100%;
    display: block;
    object-fit: cover;
  }

  .card {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    overflow: hidden;
    box-shadow: 0 0.1rem 1rem rgba(0, 0, 0, 0.1);
    border-radius: 1em;
    background: #19336c;
    /*background: linear-gradient(to right, #ffffff, #ece9e6);*/
    margin-bottom: 0.5em;
  }

  .card__body {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    color: #eeb700;
  }

  .card__body h2 {
    font-size: 1.5rem;
    color: #eeb700;
    font-family: 'Nuffle', sans-serif;
  }

  .card__footer {
    display: flex;
    padding: 1rem;
    margin-top: auto;
  }

  .user {
    display: flex;
    gap: 0.5rem;
  }

  .user__image {
    border-radius: 50%;
  }

  .user__info > small {
    color: #fff;
  }

  img {
    max-height: 13em;
  }
</style>
