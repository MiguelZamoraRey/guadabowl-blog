---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Sobre nosotros';
const identity = {
  firstName: 'Miguel',
  country: 'España',
  occupation: 'Frikazo y programador',
  hobbies: ['Bloodbowl', "Programaci'on", 'unmatched', 'MTG'],
};

const skills = [
  'HTML',
  'CSS',
  'JavaScript',
  'React',
  'Astro',
  'Redacción de documentos',
];

const happy = true;
const finished = false;
const goal = 3;
---

<BaseLayout pageTitle={pageTitle}>
  <p>
    Guadabowl es una web fan dedicada a gestionar las ligas torneos y el juego
    organizado en general de blood bowl en la ciudad de Guadalajara España.
  </p>

  <p>
    Esencialmente somos Gafiiis (Comisionado), Jorge (Comisionado), Ainhur
    (Comisionado), y colabora con nosotros Lady toxiclake (ilustradora), Júpiter
    juegos Gudalajara, y Fanath.
  </p>

  <h1 class="center-title">Encuentranos en varios canales</h1>

  <section class="colaborators-two">
    <section class="profile">
      <h2>Instagram</h2>
      <img src="/assets/images/brands/insta.webp" />
      <div class="links">
        <a href="https://www.instagram.com/guadabowl/">Link</a>
      </div>
    </section>

    <section class="profile">
      <h2>Youtube</h2>
      <img src="/assets/images/brands/youtu.webp" />
      <div class="links">
        <a href="https://www.youtube.com/@GuadaBowlTV">Link</a>
      </div>
    </section>
  </section>

  <h1 class="center-title">Comisionado</h1>

  <section class="colaborators">
    <section class="profile">
      <h2>Gafiiis</h2>
      <img src="/assets/images/other/Gafiiis.webp" />
      <div class="links">
        <a href="https://www.instagram.com/guadabowl/">Comisariado</a>
      </div>
    </section>
    <section class="profile">
      <h2>Jdiegar</h2>
      <img src="/assets/images/other/jdiegar.webp" />
      <div class="links">
        <a href="https://www.instagram.com/guadabowl/">Comisariado</a>
      </div>
    </section>
    <section class="profile">
      <h2>Ainhur</h2>
      <img src="/assets/images/other/profile2.webp" />
      <div class="links">
        <a href="https://www.mzrdeveloper.com">Comisariado</a>
      </div>
    </section>
  </section>

  <h1 class="center-title">Patrocinan</h1>

  <section class="colaborators">
    <section class="profile">
      <h2>Lady Toxiclake</h2>
      <img src="/assets/images/other/ladyToxiclake2.webp" />
      <div class="links">
        <a href="https://www.instagram.com/las_minis_de_gyoza/"
          >Instagram miniaturas</a
        >
        <a href="https://www.instagram.com/lady_toxiclake/"
          >Instagram ilustración</a
        >
      </div>
    </section>
    <section class="profile">
      <h2>Júpiter juegos Gudalajara</h2>
      <img src="/assets/images/other/JupiterGuada2.webp" />
      <div class="links">
        <a href="https://www.instagram.com/jupiterguadalajara/">Instagram</a>
      </div>
    </section>
    <section class="profile">
      <h2>Fanath</h2>
      <img src="/assets/images/other/FanathLogo.webp" />
      <div class="links">
        <a href="https://fanathminiatures.com/">Tienda</a>
      </div>
    </section>
  </section>
</BaseLayout>

<style>
  .center-title {
    text-align: center;
  }

  .colaborators-two {
    display: flex;
    flex-direction: column;
    gap: 1em;

    .profile {
      width: 100%;
      display: flex;
      padding: 1em;
      background-color: #19336c;
      border-radius: 0.5em;
      flex-direction: column;
      gap: 1em;

      h2 {
        font-family: 'Nuffle', sans-serif;
        color: #eeb700;
      }

      img {
        max-width: 100%;
        height: fit-content;
        border-radius: 1em;
      }
      .links {
        display: flex;
        flex-direction: column;
        gap: 1em;
        text-align: center;

        a {
          margin: 0.25em;
          border: dotted 1px transparent;
          border-radius: 0.5em;
          padding: 0.5em 1em;
          font-size: 1.15em;
          background-color: #c80000;
          color: #fff;
          text-decoration: none;
        }
      }
    }
  }
  .colaborators {
    display: flex;
    flex-direction: column;
    gap: 1em;

    .profile {
      width: 100%;
      display: flex;
      padding: 1em;
      background-color: #19336c;
      border-radius: 0.5em;
      flex-direction: column;
      gap: 1em;

      h2 {
        font-family: 'Nuffle', sans-serif;
        color: #eeb700;
      }

      img {
        max-width: 100%;
        height: fit-content;
        border-radius: 1em;
      }
      .links {
        display: flex;
        flex-direction: column;
        gap: 1em;
        text-align: center;

        a {
          margin: 0.25em;
          border: dotted 1px transparent;
          border-radius: 0.5em;
          padding: 0.5em 1em;
          font-size: 1.15em;
          background-color: #c80000;
          color: #fff;
          text-decoration: none;
        }
      }
    }
  }
  @media screen and (min-width: 636px) {
    .colaborators-two {
      flex-direction: row;
      .profile {
        margin-left: 11%;
        width: 33%;
        img {
          width: 100%;
          height: fit-content;
        }
      }
    }
    .colaborators {
      flex-direction: row;
      .profile {
        width: 33%;
        img {
          width: 100%;
          height: fit-content;
        }
      }
    }
  }
</style>
